@model WebApplication1.Models.User

@{
    ViewBag.Title = "Чат";
}

@Styles.Render("~/Content/chatroom-replace.css")

<div class="chat-room-block">
    <div class="chat-control">
        <input id="message" class="form-control" type="text" name="msg" placeholder="Ваше повідомлення" />
        <input id="sendmessage" class="btn btn-success" type="button" name="Відправити" value="Відправити" />
        <input type="hidden" id="displayname" value="@Model.Name" />
    </div>
    <div class="chat-logs">

    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
